{
  "name": "entropyjs",
  "version": "0.0.1",
  "description": "JS SDK for entropy blockchain ",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "mocha -t 100000 -r ts-node/register '*/src/tests.test.ts'",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier:fix": "prettier --write .",
    "prettier": "prettier --check .",
    "peek": "tsc --build --clean",
    "clean:all": "yarn workspaces foreach run clean"
  },
  "workspaces": [
    "core/*",
    "crypto/*",
    "substrate/*",
    "threshold-server/*"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/entropyxyz/entropy-js.git"
  },
  "author": "Entropy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/entropyxyz/entropy-js/issues"
  },
  "homepage": "https://github.com/entropyxyz/entropy-js#readme",
  "devDependencies": {
    "@tsconfig/node18": "^1.0.1",
    "@types/jest": "^29.2.3",
    "@types/mocha": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "chai": "^4.3.7",
    "eslint": "^8.27.0",
    "husky": "^4.3.5",
    "mocha": "^10.1.0",
    "prettier": "2.2.1",
    "should": "^13.2.3",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn prettier && yarn peek"
    }
  }
}
