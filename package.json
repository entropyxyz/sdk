{
  "name": "@entropyxyz/sdk",
  "version": "0.1.4",
  "license": "AGPL-3.0-only",
  "description": "JS SDK for entropy blockchain ",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "browser": "dist/index.js",
  "scripts": {
    "test": "yarn test:setup && yarn removedb && tape -r ts-node/register/transpile-only tests/index.test.ts",
    "test:setup": "docker version && [ \"$(cat .nvmrc)\" = \"$(node --version)\" ] && echo \"\\nCORRECT NODE VERSION\\n\" || { echo \"\\nINCORRECT NODE VERSION\\n\"; exit 1; }",
    "test:log": "yarn removedb && jest --runInBand --detectOpenHandles --silent=false --verbose",
    "test:coverage": "nyc yarn test",
    "test:tape": "tape tests/index.test.ts",
    "lint": "yarn lint:ts && yarn lint:eslint",
    "lint:ts": "tsc",
    "lint:eslint": "eslint . --ext .ts --fix",
    "prettier": "prettier --write .",
    "peek": "tsc --build --clean",
    "burn": "rm -Rf node_modules && yarn cache clean --all && yarn install",
    "bundle": "tsup",
    "bundle:watch": "tsup --watch",
    "bundle:node": "tsup --platform node ",
    "bundle:browser": "tsup --platform browser",
    "find-deadcode": "ts-prune",
    "generate:types": "dev/bin/generate-types.sh",
    "prepare": "husky",
    "postinstall": "husky",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "removedb": "rm -rf .entropy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/entropyxyz/sdk.git"
  },
  "publishConfig": {
    "@entropyxyz:SDK": "https://npm.pkg.github.com"
  },
  "author": "Entropy",
  "bugs": {
    "url": "https://github.com/entropyxyz/sdk/issues"
  },
  "homepage": "https://github.com/entropyxyz/sdk#readme",
  "devDependencies": {
    "@polkadot/typegen": "^10.11.1",
    "@types/jest": "^29.4.0",
    "@types/tape": "^5",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "^29.4.3",
    "lint-staged": ">=10",
    "nyc": "^15.1.0",
    "pinst": "^3.0.0",
    "prettier": "2.8.8",
    "tape": "^5.7.5",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-prune": "^0.10.3",
    "tsup": "^6.5.0",
    "typedoc": "^0.25.3",
    "typedoc-plugin-markdown": "^3.17.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@entropyxyz/entropy-protocol-nodejs": "^0.1.0",
    "@entropyxyz/entropy-protocol-web": "^0.1.0",
    "@polkadot/api": "^10.11.1",
    "@types/node": "^20.10.3",
    "ethereum-cryptography": "^2.1.2",
    "ethereumjs-tx": "^2.1.2"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.{js,ts,json,md}": "prettier --write"
  }
}
