{
  "name": "@entropyxyz/entropy-js",
  "version": "0.0.1",
  "description": "JS SDK for entropy blockchain ",
  "main": "dist/browser/index.mjs",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "browser": "dist/browser/index.mjs",
  "private": true,
  "scripts": {
    "test": "yarn removedb && mocha -t 100000 -r ts-node/register '**/tests.test.ts' --exit",
    "test:utils": "mocha -t 100000 -r ts-node/register 'core/utils.test.ts'",
    "lint:ts": "tsc",
    "lint:eslint": "eslint . --ext .ts",
    "lint": "yarn lint:ts && yarn lint:eslint",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier:fix": "prettier --write .",
    "prettier": "prettier --check .",
    "peek": "tsc --build --clean",
    "clean": "rm -Rf node_modules && yarn cache clean --all && yarn install",
    "removedb": "rm -rf .entropy",
    "bundle": "tsup --dts --format cjs,esm core/index.ts",
    "bundle:watch": "tsup --watch",
    "bundle:node": "tsup --platform node ",
    "bundle:browser": "tsup --platform browser",
    "bundle:prod": "tsup --minify",
    "find-deadcode": "ts-prune"
  },
  "workspaces": [
    "core/*",
    "crypto/*",
    "substrate/*",
    "threshold-server/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/entropyxyz/entropy-js.git"
  },
  "publishConfig": {
    "@entropyxyz:entropy-js": "https://npm.pkg.github.com"
  },
  "author": "Entropy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/entropyxyz/entropy-js/issues"
  },
  "homepage": "https://github.com/entropyxyz/entropy-js#readme",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@swc/core": "^1.3.32",
    "@tsconfig/node18": "^1.0.1",
    "@types/jest": "^29.2.3",
    "@types/mocha": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "chai": "^4.3.7",
    "child_process": "^1.0.2",
    "dotenv": "^16.0.3",
    "eslint": "^8.27.0",
    "mocha": "^10.1.0",
    "prettier": "2.2.1",
    "rimraf": "^4.1.2",
    "should": "^13.2.3",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "ts-prune": "^0.10.3",
    "tsup": "^6.5.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@ethersproject/bytes": "^5.7.0",
    "@polkadot/api": "^9.13.5",
    "@polkadot/types-codec": "^9.13.5",
    "axios": "^1.2.5",
    "ethers": "^5.7.2",
    "@entropyxyz/x25519-chacha20poly1305-web": "^0.1.3",
    "@entropyxyz/x25519-chacha20poly1305-nodejs": "^0.1.1"
  }
}
