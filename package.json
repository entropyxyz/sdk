{
  "name": "entropyjs",
  "version": "0.0.1",
  "description": "JS SDK for entropy blockchain ",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "yarn removedb && mocha -t 100000 -r ts-node/register '**/tests.test.ts' --exit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier:fix": "prettier --write .",
    "prettier": "prettier --check .",
    "peek": "tsc --build --clean",
    "clean": "rm -Rf node_modules && yarn cache clean --all && yarn install",
    "removedb": "rm -rf test_db && rm -rf kvstore"
  },
  "workspaces": [
    "core/*",
    "crypto/*",
    "substrate/*",
    "threshold-server/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/entropyxyz/entropy-js.git"
  },
  "author": "Entropy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/entropyxyz/entropy-js/issues"
  },
  "homepage": "https://github.com/entropyxyz/entropy-js#readme",
  "devDependencies": {
    "@tsconfig/node18": "^1.0.1",
    "@types/jest": "^29.2.3",
    "@types/mocha": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "chai": "^4.3.7",
    "child_process": "^1.0.2",
    "eslint": "^8.27.0",
    "mocha": "^10.1.0",
    "prettier": "2.2.1",
    "rimraf": "^4.1.2",
    "should": "^13.2.3",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@ethersproject/bytes": "^5.7.0",
    "@polkadot/api": "^9.13.5",
    "@polkadot/types-codec": "^9.13.5",
    "axios": "^1.2.5",
    "ethers": "^5.7.2",
    "x25519": "^0.1.0"
  }
}
