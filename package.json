{
  "name": "@entropyxyz/entropy-js",
  "version": "0.0.5",
  "description": "JS SDK for entropy blockchain ",
  "main": "dist/index.cjs",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "module": "dist/index.cjs",
  "browser": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "yarn removedb && jest --runInBand --detectOpenHandles --silent=false",
    "lint:ts": "tsc",
    "lint:eslint": "eslint . --ext .ts",
    "lint": "yarn lint:ts && yarn lint:eslint",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier:fix": "prettier --write . --ignore-path .gitignore",
    "prettier": "prettier --check .",
    "peek": "tsc --build --clean",
    "clean": "rm -Rf node_modules && yarn cache clean --all && yarn install",
    "removedb": "rm -rf .entropy",
    "bundle": "tsup --dts --format cjs,esm core/index.ts",
    "bundle:watch": "tsup --watch",
    "bundle:node": "tsup --platform node ",
    "bundle:browser": "tsup --platform browser",
    "bundle:prod": "tsup --minify",
    "find-deadcode": "ts-prune",
    "build:generate": "yarn generate:defs && yarn generate:meta",
    "generate:defs": "ts-node --skip-project node_modules/.bin/polkadot-types-from-defs --package types/interfaces --input ./types/interfaces --endpoint ./substrate/entropy-metadata.json",
    "generate:meta": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --package types/interfaces --endpoint ./substrate/entropy-metadata.json --output ./types/interfaces"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/entropyxyz/entropy-js.git"
  },
  "publishConfig": {
    "@entropyxyz:entropy-js": "https://npm.pkg.github.com"
  },
  "author": "Entropy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/entropyxyz/entropy-js/issues"
  },
  "homepage": "https://github.com/entropyxyz/entropy-js#readme",
  "devDependencies": {
    "@babel/preset-typescript": "^7.21.0",
    "@changesets/cli": "^2.26.0",
    "@polkadot/typegen": "^9.14.1",
    "@swc/core": "^1.3.32",
    "@tsconfig/node18": "^1.0.1",
    "@types/jest": "^29.4.0",
    "@types/mocha": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "chai": "^4.3.7",
    "child_process": "^1.0.2",
    "dotenv": "^16.0.3",
    "eslint": "^8.27.0",
    "jest": "^29.4.3",
    "prettier": "2.2.1",
    "rimraf": "^4.1.2",
    "should": "^13.2.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-prune": "^0.10.3",
    "tsup": "^6.5.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@entropyxyz/x25519-chacha20poly1305-nodejs": "^0.1.1",
    "@entropyxyz/x25519-chacha20poly1305-web": "^0.1.3",
    "@ethersproject/bytes": "^5.7.0",
    "@polkadot/api": "^9.13.5",
    "@polkadot/types-codec": "^9.13.5",
    "ethers": "^5.7.2"
  },
  "directories": {
    "example": "examples"
  }
}
