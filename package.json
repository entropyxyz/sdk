{
  "name": "@entropyxyz/sdk",
  "version": "0.1.4",
  "license": "ISC",
  "description": "JS SDK for entropy blockchain ",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "browser": "dist/index.js",
  "scripts": {
    "test": "yarn test:setup && yarn removedb && jest --runInBand --detectOpenHandles",
    "test:setup": "docker version && [ \"$(cat .nvmrc)\" = \"$(node --version)\" ] && echo \"\\nCORRECT NODE VERSION\\n\" || { echo \"\\nINCOREECT NODE VERSION\\n\"; exit 1; }",
    "test:log": "yarn removedb && jest --runInBand --detectOpenHandles --silent=false --verbose",
    "lint:ts": "tsc",
    "lint:eslint": "eslint . --ext .ts",
    "lint": "yarn lint:ts && yarn lint:eslint",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier:fix": "prettier --write . --ignore-path .gitignore",
    "prettier": "prettier --check .",
    "peek": "tsc --build --clean",
    "burn": "rm -Rf node_modules && yarn cache clean --all && yarn install",
    "removedb": "rm -rf .entropy",
    "bundle": "tsup",
    "bundle:watch": "tsup --watch",
    "bundle:node": "tsup --platform node ",
    "bundle:browser": "tsup --platform browser",
    "bundle:prod": "tsup --minify",
    "find-deadcode": "ts-prune",
    "generate:types": "dev/bin/generate-types.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/entropyxyz/sdk.git"
  },
  "publishConfig": {
    "@entropyxyz:SDK": "https://npm.pkg.github.com"
  },
  "author": "Entropy",
  "bugs": {
    "url": "https://github.com/entropyxyz/sdk/issues"
  },
  "homepage": "https://github.com/entropyxyz/sdk#readme",
  "devDependencies": {
    "@polkadot/typegen": "^10.11.1",
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "depcheck": "^1.4.7",
    "eslint": "^8.27.0",
    "jest": "^29.4.3",
    "prettier": "2.2.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-prune": "^0.10.3",
    "tsup": "^6.5.0",
    "typedoc": "^0.25.3",
    "typedoc-plugin-markdown": "^3.17.0",
    "typescript": "^4.9.5"
  },
  "resolutions": {
    "@polkadot/api": "^10.13.1",
    "@polkadot/api-derive":"^10.13.1",
    "@polkadot/types":"^10.13.1",
    "@polkadot/types-known": "^10.13.1",
    "@polkadot/rpc-core": "^10.13.1",
    "@polkadot/types-codec": "^10.13.1",
    "@polkadot/types-create": "^10.13.1"
  },
  "dependencies": {
    "@entropyxyz/entropy-protocol-nodejs": "^0.1.0",
    "@entropyxyz/entropy-protocol-web": "^0.1.0",
    "@polkadot/api": "^10.13.1",
    "@polkadot/api-derive": "^10.13.1",
    "@polkadot/rpc-core": "^10.13.1",
    "@polkadot/types": "^10.13.1",
    "@polkadot/types-codec": "^10.13.1",
    "@polkadot/types-create": "^10.13.1",
    "@polkadot/types-known": "^10.13.1",
    "@types/node": "^20.10.3",
    "ethereum-cryptography": "^2.1.2",
    "ethereumjs-tx": "^2.1.2",
    "hpke-js": "^1.2.7"
  },
  "directories": {
    "example": "examples"
  }
}
