{
  "compilerOptions": {
    "noEmit": false,
    "module": "esnext",
    "target": "ES6",
    "skipLibCheck": true,
    "incremental": true,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types",
      "@types/",
      "@polkadot/types/*",
      "substrate-generated-types/interfaces"
    ],
    "moduleResolution": "node",
    "tsBuildInfoFile": ".tsbuildinfo",
  },
  "include": ["src/*.ts"],
  "exclude": [
    "dev",
    "dist",
    "docs",
    "node_modules",
    "substrate-generated-types"
  ],
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  }
}
