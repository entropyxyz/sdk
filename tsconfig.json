{
  "compilerOptions": {
    "target": "ES6",
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "typeRoots": ["node_modules/@types", "@types/"],
    "tsBuildInfoFile": ".tsbuildinfo",
    "moduleResolution": "node",
    "module": "Node16"
  },
  "exclude": ["node_modules", "dist", "build", "examples", "old"],
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  }
}