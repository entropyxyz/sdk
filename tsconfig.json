{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "typeRoots": [
      "node_modules/@types",
      "@types/",
      "@polkadot/types/*",
      "substrate-generated-types/interfaces"
    ],
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "exclude": [
    "dev",
    "dist",
    "docs",
    "node_modules",
    "substrate-generated-types"
  ],
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  }
}
