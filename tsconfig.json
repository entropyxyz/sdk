{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES6",
    "skipLibCheck": true,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types",
      "@types/",
      "@polkadot/types/*",
      "substrate-generated-types/interfaces"
    ],
    "moduleResolution": "node"
  },
  "exclude": [
    "dev",
    "dist",
    "docs",
    "node_modules",
    "substrate-generated-types",
    "tests"
  ],
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  }
}
